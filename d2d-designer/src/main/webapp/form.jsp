<%@page import="java.util.ArrayList"%>
<html>
<body>

<h1>Sign Up</h1>

<%!
class LabelValueBean {
	private String label;
	private String value;
	public LabelValueBean(String label, String value) {
		this.label = label;
		this.value = value;
	}
	public String getLabel() {
		return this.label;
	}
	public String getValue() {
		return this.value;
	}
}
%>
<%
LabelValueBean email = new LabelValueBean("email", "marcello.teodori@jugmilano.it");
LabelValueBean password = new LabelValueBean("password", "");

List<String> errors = new ArrayList<String>();
%>
<form action="submit.html">
  <% if (! errors.isEmpty()) { %>
  <div id="errors" class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
        <% for (String message : errors) { %>
        <li><%= message %></li>
        <% } %>
    </ul>
  </div>
  <% } %>
  <p>
    <label for="email"><%= email.getLabel() %></label><br/>
    <input type="text" value="<%= email.getValue() %>"/><br/>
  </p>
  <p>
    <label for="password"><%= password.getLabel() %></label><br/>
    <input type="password" value="<%= password.getValue() %>"/><br/>
  </p>
  <p class="button"><input type="submit" value="Create User" /></p>
</form>

</body>
</html>
